CC=gcc
CFLAGS=-Wall
CFLAGSNOLINK=$(CFLAGS) -c 
LIBS= -lrt -lbcm2835
INC= -I/usr/local/include -I.

all: rfm12b_transmitter

rfm12b_transmitter: transmitter.o rfm12b.o
	$(CC) $(CFLAGS) -o rfm12b_transmitter transmitter.o rfm12b.o $(LIBS) 

transmitter.o: transmitter.c
	$(CC) $(CFLAGSNOLINK) $(LIBS) -Wall transmitter.c

rfm12b.o: rfm12b.c
	$(CC) $(CFLAGSNOLINK) $(LIBS) -Wall rfm12b.c
